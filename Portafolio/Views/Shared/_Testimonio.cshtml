@model Testimonio
@using (Html.BeginForm("EnviarTestimonio", "Default", FormMethod.Post, new { @class = "hidden-print" }))
{
    @Html.HiddenFor(x => x.UsuarioId)
    @Html.HiddenFor(x => x.Ip)
    @Html.HiddenFor(x => x.Fecha)
    <div class="form-group">
        @Html.LabelFor(x => x.Nombre)
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", placeholder = "Ingrese su nombre" })
        @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Comentario)
        @Html.TextAreaFor(x => x.Comentario, new { @class = "form-control", placeholder = "Ingrese su comentario" })
        @Html.ValidationMessageFor(x => x.Comentario, null, new { @class = "label label-danger" })
    </div>
    <div class="text-right">
        <!-- El data reset limpia el formulario al finalizar la petición AJAX, siempre y cuando sea exitosa -->
        <button type="submit" class="btn btn-lg btn-primary" data-ajax="true" data-reset="true">
            Enviar
        </button>
    </div>
}